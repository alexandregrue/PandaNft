<!-- Main Section -->
<div id="banner">
    <div class="banner-section max-width-content">
        <div class="banner-container">
            <img class="banner-image" src="{{ asset('build/images/items/CyberCloneImage.jpeg') }}" alt="CyberClone banniere"/>
            {# Image to insert #}
        </div>
        <div class="banner-container">
            <div class="text-animation">
                {{ descriptions[0].description }}âš¡
            </div>
        </div>
    </div>
</div>

<!-- About the club Section -->
<section id="about">
    <div class="about-section max-width-content">
        <h1 class="section-title" data-aos="fade-up" data-aos-duration="1500">About The Crew</h1>
        <p data-aos="fade-up" data-aos-duration="1500">
            {{ abouts[0].description }}
        </p>
    </div>
</section>

<!-- About the club Section -->
<section id="faq">
    <div class="faq-section max-width-content">
        <h1 class="section-title" data-aos="fade-up" data-aos-duration="1500">FAQ</h1>

        {% for faq in faqs %}
        <div class="topics">
            <div class="topic" data-aos="fade-zoom-in" data-aos-easing="ease-in-back" data-aos-delay="300" data-aos-offset="0">
                <details>
                    <summary class="question">{{ faq.question }}</summary>
                    <div class="answer">
                        {{ faq.response }}
                    </div>
                </details>
            </div>
        </div>
        {% endfor %}
    </div>
</section>

<!-- Roadmap Section -->
<section id="roadmap">
    <div class="roadmap-section max-width-content">
        <h1 class="section-title" data-aos="fade-up" data-aos-duration="1500">Roadmap</h1>
    
        <div class="section-container">
            <div class="roadmap-container">
                <div class="timeline" data-aos-anchor-placement="bottom-bottom">
                    {# here #}
                    {% for roadmap in road_maps %}
                        {% if roadmap.id % 2 == 0 %}
                            <div class="container left">
                                <div class="content" data-aos="fade-up-right" data-aos-duration="1500">
                                    <div class="content-header">
                                        <span class="content-header-title">{{ roadmap.title }}</span>
                                        <span class="content-header-time">{{ roadmap.date }}</span>
                                    </div>
                                    <p>
                                        {{ roadmap.description | nl2br}}
                                    </p>
                                </div>
                            </div>
                        {% else %}
                            <div class="container right">
                                <div class="content" data-aos="fade-up-left" data-aos-duration="1500">
                                    <div class="content-header">
                                        <span class="content-header-title">{{ roadmap.title }}</span>
                                        <span class="content-header-time">{{ roadmap.date }}</span>
                                    </div>
                                    <p>
                                        {{ roadmap.description | nl2br}}
                                    </p>
                                </div>
                            </div>
                        {% endif %}

                        
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Team Section -->
<section id="team">
    <div class="team-section max-width-content">
        <h1 class="section-title" data-aos="fade-down"  data-aos-duration="1500">Team</h1>

        <div class="section-container team-section-container">

            {% for team in teams %}
                <div class="team-card" data-aos="flip-left" data-aos-duration="1500">
                    <div class="team-card-img">
                        <img src="{{ asset('/images/teams/' ~ team.picture) }}" alt="Team member {{ team.name }}"/>
                    </div>
                    <div class="team-card-name">{{ team.name }}</div>
                    <div class="team-card-role">{{ team.job }}</div>
                </div>
            {% endfor %}
        </div>
    </div>
</section>

<!-- Footer -->
